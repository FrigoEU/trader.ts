{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h",
    "experimentalDecorators": true,
    "lib": ["es2019", "dom"]
  },
  "include": [
    "./*.ts",
    "./*.tsx",
    "./types/**/*.ts",
    "./clientcomponents/**/*.ts"
  ],
  "exclude": []
}
